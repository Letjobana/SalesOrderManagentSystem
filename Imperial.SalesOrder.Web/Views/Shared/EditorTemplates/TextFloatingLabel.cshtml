@using Imperial.SalesOrder.Web.Helpers
@model object

@{
    string error = "" + Html.ValidationErrorFor(m => m, " is-invalid");

    var htmlAttributes = new RouteValueDictionary();
    htmlAttributes.Add("placeholder", (ViewBag.placeholder != null) ? ViewBag.placeholder : ViewData.ModelMetadata.DisplayName);

    if (ViewBag.@type != null)
    {
        htmlAttributes.Add("type", ViewBag.@type);
    }

    string className = "form-control" + error;

    if (ViewBag.@class != null)
    {
        className = ViewBag.@class + error;
    }

    if (ViewBag.ReadOnly != null && ViewBag.ReadOnly == true)
    {
        htmlAttributes.Add("readonly", true);
        className = "form-control-plaintext";
    }

    htmlAttributes.Add("class", className);
}

<div class="form-floating">
    @Html.TextBox("", ViewData.TemplateInfo.FormattedModelValue, htmlAttributes)
    @Html.LabelFor(m => m)
</div>
<div class="input-validation-error-message">
    @Html.ValidationMessageFor(m => m)
</div>
