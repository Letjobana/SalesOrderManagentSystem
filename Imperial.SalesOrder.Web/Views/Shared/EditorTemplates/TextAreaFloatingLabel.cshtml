@using Imperial.SalesOrder.Web.Helpers
@model object
@{
    string error = "" + Html.ValidationErrorFor(m => m, " is-invalid");

    var htmlAttributes = new RouteValueDictionary();
    htmlAttributes.Add("class", (ViewBag.@class != null) ? ViewBag.@class + error : "form-control textarea-large" + error);
    htmlAttributes.Add("rows", (ViewBag.@rows != null) ? ViewBag.@rows : "3");

}

<div class="form-floating">
    @Html.TextArea("", htmlAttributes)
    @Html.LabelFor(m => m)
</div>
<div class="input-validation-error-message">
    @Html.ValidationMessageFor(m => m)
</div>