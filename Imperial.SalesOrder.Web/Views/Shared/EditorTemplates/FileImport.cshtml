@using Imperial.SalesOrder.Web.Helpers
@model object
@{
    string error = "" + Html.ValidationErrorFor(m => m, " is-invalid");

    var htmlAttributes = new RouteValueDictionary();
    htmlAttributes.Add("type", "file");
    htmlAttributes.Add("class", (ViewBag.@class != null) ? ViewBag.@class + error : "form-control" + error);
}

<div class="">
    @*@Html.LabelFor(m => m)*@
    @Html.TextBox("", ViewData.TemplateInfo.FormattedModelValue, htmlAttributes)
</div>
<div class="input-validation-error-message">
    @Html.ValidationMessageFor(m => m)
</div>